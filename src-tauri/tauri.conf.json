{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Helium",
    "version": "0.8.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "dialog": {
        "open": true
      },
      "shell": {
        "all": false,
        "open": "((^https:\/\/\\w+).+)|(^(\/\\w+)+(\\.md)$)|(^([A-Z]:(\\\\\\w+)+)(\\.md)$)",
        "sidecar": true,
        "execute": true,
        "scope":[
          {
            "name" : "pandoc",
            "cmd"  : "pandoc",
            "args" : true
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.adrien.helium",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Helium",
        "width": 1200,
        "height": 900
      }
    ]
  }
}
